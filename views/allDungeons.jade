extends layout
block content
    h1 title
    ul
      each dungeon in Dungeons
        li #{dungeon.ObjectId} created: #{dungeon.date_created} Number of Rooms: #{dungeon.number_of_rooms}
        ol
          each room in dungeon.all_rooms
            li Room Dimensions (L  W  H): #{room.l_w_h[0]} x #{room.l_w_h[1]} x #{room.l_w_h[2]}
            ul
              li Strange Features: #{room.weird_feature}
            ul
              li Major Features:
                each maj_feature in room.major_features
                  li #{maj_feature}
            ul
              li Minor Features:
                each min_feature in room.minor_features
                  li #{min_feature}


